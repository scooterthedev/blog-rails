<div id="<%= dom_id post %>">

<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title"><%= post.title %></h5>
    <p class="card-text"><%= truncate(post.body, length: 150) %></p>
    <%= link_to "Read more", post_path(post), class: "btn btn-sm btn-outline-primary" %>
  </div>
</div>

</div>
